<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="progress_bar_style" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateTint">#000000</item>
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">#366CF3</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">#45F68C</item>
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>